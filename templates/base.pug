extends bootstrap/base.html


block scripts
    {{ super() }}
    {{ moment.include_moment() }}


block title
    if title
        title #{title} - Microblog
    else
        title Welcome to Microblog


block navbar
    nav.navbar.navbar-default
        .container
            .navbar-header
                button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1' aria-expanded='false')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href=url_for('index')) Microblog
            div.collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
                ul.nav.navbar-nav
                    li: a(href=url_for('index')) #{_('Home')}
                    li: a(href=url_for('explore')) #{_('Explore')}
                ul.nav.navbar-nav.navbar-right
                    if current_user.is_anonymous
                        li: a(href=url_for('login')) #{_('Login')}
                    else
                        li: a(href=url_for('user', username=current_user.username)) #{_('Profile')}
                        li: a(href=url_for('logout')) #{_('Logout')}


block content
    div.container
        hr
        messages = get_flashed_messages()
        if messages
            ul
            each message in messages
                div(class='alert alert-info' role='alert') #{_(message)}
        block app_content


