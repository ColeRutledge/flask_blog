extends base.pug
block content
    table
        tr(valign='top')
            td: img(src=user.avatar(128))
            td: h1 User: #{user.username}
    hr
    for post in posts
        table
            tr(valign='top')
                td: img(src=user.avatar(36))
                td #{post.author.username} says: #[br] #{post.body}
